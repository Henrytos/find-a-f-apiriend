generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LevelPet{
  SMALL
  MEDIUM
  LARGE
}


model Organization {
  id                 String @id @default(uuid())
  pet                Pet[]
  manager_name       String
  email              String
  phone              String
  password_hash      String  
  address            Address?   
   @@map("organizations")
}

model Pet {
  id                 String   @id @default(uuid())
  about              String   
  name               String
  age                Decimal 
  size               LevelPet
  level_independence LevelPet
  environment        LevelPet
  image_url          String[]
  requirement        String[]
  organization_id    String    
  organization       Organization @relation(fields: [organization_id], references: [id])
  @@map("pets")
}



model Address{
  id                 String @id @default(uuid())
  address            String
  state              String
  organization_id    String   @unique
  organization       Organization @relation(fields: [organization_id], references: [id])
}

enum Role {
  ADMIN
  MEMBER
}
